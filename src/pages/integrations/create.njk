    }

    .add-section .tab-content .tab-pane {
        background: #fff;
        padding: 21px 0;
        position: relative;
    }

    .phone-column {
        background: transparent url('https://www.plannthat.com/_nuxt/img/iphone.7d167d0.svg') top left no-repeat;
        background-size: 100% auto;
        bottom: 0;
