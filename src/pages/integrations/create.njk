        border-top-left-radius: 4px;
        color: #fff;
        display: flex;
        font-weight: bold;
        position: absolute;
        right: 0;
        top: 21px;
        width: auto;
        z-index: 1;
    }
    .strategy-select button {
        border-bottom-right-radius: 0;
        border-top-right-radius: 0;
    }

    .schedule-block {
        padding: 50px 0;
        position: relative;
    }

    .schedule-block .modal-footer {
        justify-content: space-between;
    }

    .schedule-title {
        margin-bottom: 20px;
    }

    .schedule-block .custom-date .custom-date-label {
        align-items: center;
        background: transparent;
        color: #000;
        display: flex;
        padding: 8px;
        text-align: left;
        width: 100%;
    }

    .schedule-block .custom-date .custom-date-label input {
        flex: 0 0 170px;
        margin-left: 15px;
    }

    .schedule-block .custom-date .custom-date-label .bi-clock {
