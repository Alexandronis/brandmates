        text-align: right;
    }

    .form-control {
        padding:8px;
    }

    .ui-datepicker {
        background: #ffffff;
        border-radius: 15px;
    }
    .ui-datepicker-header {
        background: #9012fe;
        color: #ffffff;
        height: 50px;
        line-height: 50px;
        margin-bottom: 10px;
    }
    .ui-datepicker-prev,
    .ui-datepicker-next {
        border-radius: 100%;
        cursor: pointer;
        height: 20px;
        margin-top: 12px;
        overflow: hidden;
        text-indent: 9999px;
        width: 20px;
    }
    .ui-datepicker-prev {
        float: left;
        margin-left: 12px;
    }
    .ui-datepicker-prev:after {
        margin: -43px 0px 0px 8px;
        transform: rotate(45deg);
    }
    .ui-datepicker-next {
        float: right;
        margin-right: 12px;
    }
    .ui-datepicker-next:after {
        margin: -43px 0px 0px 6px;
        transform: rotate(-135deg);
    }
    .ui-datepicker-prev:after,
    .ui-datepicker-next:after {
        border-bottom: 2px solid #ffffff;
        border-left: 2px solid #ffffff;
        content: '';
        display: block;
        height: 8px;
        position: absolute;
        width: 8px;
    }
    .ui-datepicker-prev:hover,
    .ui-datepicker-next:hover,
    .ui-datepicker-prev:hover:after,
    .ui-datepicker-next:hover:after {
        border-color: #333333;
    }
    .ui-datepicker-title {
        font-size: 25px;
        text-align: center;
    }
    .ui-datepicker-calendar {
        text-align: center;
        width: 100%;
    }
    .ui-datepicker-calendar thead tr th span {
        color: #9012fe;
        display: block;
        font-size: 18px;
        margin-bottom: 5px;
        width: 40px;
    }
    .ui-state-default {
        color: #333333;
        display: block;
        font-size: 16px;
        line-height: 40px;
        text-decoration: none;
    }
    .ui-state-default:hover {
        background: #9012fe;
        border-radius: 50px;
        color: #ffffff;
        transition: all 0.25s cubic-bezier(0.7, -0.12, 0.2, 1.12);
    }
    .ui-state-highlight {
        background-color: #9012fe;
        border-radius: 50px;
        color: #ffffff;
    }
    .ui-state-active {
        background-color: #9012fe;
        border-radius: 50px;
        color: #ffffff;
    }
    .ui-datepicker-unselectable .ui-state-default {
        border: 2px solid transparent;
        color: #eee;
    }

    .main-row {
        display: flex;
    }
    .image-dropzone {
        margin-right: 32px;
        width: 240px;
    }
    .image-dropzone .main-dropzone {
        background: #F2F9FD;
        cursor: pointer;
        height: 240px;
        margin-bottom: 5px;
        overflow: hidden;
        position: relative;
        width: 100%;
    }
    .image-dropzone .main-dropzone .dz-preview {
        height: 100%;
    }
    .image-dropzone .main-dropzone .dz-preview div {
        display: none;
    }
    .image-dropzone .main-dropzone .dz-preview .dz-image {
        display: block;
        height: 100%;
    }
    .image-dropzone .main-dropzone .dz-preview .dz-image img {
        height: auto;
        position: relative;
        width: 100%;
    }
    .image-dropzone .main-dropzone .plus-icon {
        left: calc(50% - 19px);
        position: absolute;
        top: calc(50% - 19px);
        width: 38px;
    }
    .image-dropzone .image-dropzone-small {
        display: flex;
        justify-content: space-between;
        overflow: hidden;
    }
    .image-dropzone .image-dropzone-small .dz-preview div {
        display: none;
    }
    .image-dropzone .image-dropzone-small .dz-preview .dz-image {
        display: block;
    }
    .image-dropzone .image-dropzone-small .small-dropzone {
        background: #F2F9FD;
        cursor: pointer;
        flex-grow: 1;
        flex-basis: 0;
        height: 38px;
        width: 38px;
    }
    .image-dropzone .image-dropzone-small .small-dropzone:not(:last-child) {
        margin-right: 7px;
    }
    .image-dropzone .story-dropzone {
        background: #F2F9FD;
        cursor: pointer;
        display: inline-block;
        height: 410px;
        position: relative;
        vertical-align: top;
        width: 230px;
    }
    .image-dropzone .story-dropzone .plus-icon {
        left: calc(50% - 19px);
        position: absolute;
        top: calc(50% - 19px);
        width: 38px;
    }
    .image-dropzone .story-dropzone .dz-preview div {
        display: none;
    }
    .image-dropzone .story-dropzone .dz-preview .dz-image {
        display: block;
    }
    .image-dropzone .story-dropzone .dz-preview .dz-image img {
        height: 100%;
        width: 100%;
    }
    .image-dropzone.image-dropzone-story {
        overflow: scroll;
        width: 400px;
    }
    .image-dropzone .image-dropzone-story-inner {
        width: 470px;
    }
    .image-dropzone .image-dropzone-story-inner .story-dropzone:not(:last-child) {
        margin-right: 5px;
    }
    .comment-block {
        padding-right: 42px;
        width: 100%;
    }
    .comment-block .instagram-logo {
        background: #F2F9FD;
        height: 48px;
        margin-bottom: 14px;
        padding: 14px;
        width: 48px;
    }
    .comment-block .instagram-logo .instagram-icon {
        height: 20px;
        margin-top: -8px;
        width: 20px;
    }
    .comment-block .comment-area .textarea {
        background-color: #fafbff;dfb;
        border-radius: 4px;
        box-shadow: none;
        color: inherit;
        font-size: 14px;
        margin-bottom: 30px;
        min-height: 160px;
        outline: 0;
        padding: 24px;
        width: 100%;
    }
    .comment-block .comment-button {
        border: 1px solid #E7EAF0;
    }

</style>

